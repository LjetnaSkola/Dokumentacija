<MyRelative>:
    btn: top_btn
    RelativeLayout:
        Button:
            background_color: (0, 0, 1, 1)
            id: top_btn
            text: 'Top Left'
            size_hint: None, None
            size: 100, 50
            pos: 0, root.height - self.height
            canvas.before:
                Color:
                    rgba: (0, 1, 0, 1)
                Rectangle: 
                    color: 
                    size: (200, 300)
                    pos: self.pos
            canvas.after:
                Color:
                    rgba: (1, 0, 1, 0.3)
                Rectangle: 
                    size: (400, 300)
                    pos: self.pos
