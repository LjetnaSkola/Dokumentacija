<MyButton>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1  # siva boja za pozadinu
        Rectangle:
            size: 50, 50
            pos: 100, 100

    canvas.after:
        Color:
            rgba: 1, 1, 1, 1  # inicijalno transparentna plava boja
        Rectangle:
            size: 50, 50
            pos: 100, 100

    text: 'Transparentno Dugme'
    size_hint: None, None
    size: 10, 10
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    on_release:
        root.canvas.after.clear()
        Color:
            rgba: 1, 1, 1, 1  #
        Rectangle:
            size: 25, 25
            pos: 120, 120
